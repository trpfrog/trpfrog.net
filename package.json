{
  "name": "trpfrog.net",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint-fix": "turbo lint-fix && prettier . --write",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "reinstall-all-deps": "rm -rf node_modules ./*/*/node_modules && pnpm install",
    "prepare": "lefthook install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/config-inspector": "catalog:",
    "@evilmartians/lefthook": "catalog:",
    "@trpfrog.net/config-eslint": "workspace:*",
    "@types/node": "^20.17.10",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "better-typescript-lib": "catalog:",
    "eslint": "^9.14.0",
    "happy-dom": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-classnames": "catalog:",
    "prettier-plugin-merge": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "tsr": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "wrangler": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.1",
      "@types/react-dom": "19.0.2",
      "eslint": "npm:eslint@9.14.0"
    }
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "valibot": "catalog:"
  }
}
