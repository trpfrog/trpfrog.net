{
  "name": "trpfrog.net",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint-fix": "turbo lint-fix && prettier . --write",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "reinstall-all-deps": "rm -rf node_modules ./*/*/node_modules && pnpm install",
    "prepare": "lefthook install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "engines": {
    "node": ">=20"
  },
  "// NOTE:": "We put the turborepo version directly in package.json because Vercel may read it from here",
  "devDependencies": {
    "@eslint/config-inspector": "catalog:",
    "@evilmartians/lefthook": "catalog:",
    "@trpfrog.net/config-eslint": "workspace:*",
    "@types/node": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "better-typescript-lib": "catalog:",
    "eslint": "catalog:",
    "happy-dom": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-classnames": "catalog:",
    "prettier-plugin-merge": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "tsr": "catalog:",
    "turbo": "^2.6.3",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "wrangler": "3.105.0"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "arkregex": "catalog:",
    "valibot": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "wrangler": "catalog:",
      "esbuild@<=0.24.2": ">=0.25.0",
      "cookie@<0.7.0": ">=0.7.0",
      "hono@>=4.8.0 <4.9.6": ">=4.9.6",
      "vite@>=7.1.0 <=7.1.4": ">=7.1.5",
      "hono@<4.9.7": ">=4.9.7",
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11",
      "hono@>=1.1.0 <4.10.2": ">=4.10.2",
      "tar-fs@>=2.0.0 <2.1.4": ">=2.1.4",
      "tar-fs@>=3.0.0 <3.1.1": ">=3.1.1",
      "js-yaml@<3.14.2": ">=3.14.2",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "hono@<4.10.3": ">=4.10.3",
      "mdast-util-to-hast@>=13.0.0 <13.2.1": ">=13.2.1",
      "ai@<5.0.52": ">=5.0.52",
      "jws@=4.0.0": ">=4.0.1"
